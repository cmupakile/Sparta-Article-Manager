<div class="container">
  <div class="col-sm-10 col-sm-offset-1 col-xs-12 article_content">
    <% @articles.each do |article| %>
      <div class="col-xs-12 inner_div">
        <div class="text-center">
          <h2><%= article.title %></h2>
          <h6><%= article.created_at.strftime('%b %d, %Y') %></h6>
        </div>
        <div>
          <%= raw (article.body).truncate(90) %>
        </div>
        <div class="text-center">
          <%= link_to "Read More", article_path(article) %>
        </div>
        <br>
      </div>
      <% end %>
  </div>
</div>
